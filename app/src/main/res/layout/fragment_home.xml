<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/greet_user"
        android:text="Good day, User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/announcement_header"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/announcement_header"
        android:text="Announcements"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/greet_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText" />

    <!--androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/mock_announcements"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcement_header"/-->

    <ImageView
        android:id="@+id/mock_announcements"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:maxWidth="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/announcement_header"
        android:src="@drawable/announcement_placeholder"
        />

    <TextView
        android:text="Attendance"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/attendance_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mock_announcements"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <!--androidx.constraintlayout.utils.widget.MockView
        android:id="@+id/attendance_body"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/attendance_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        /-->

    <ImageView
        android:id="@+id/attendance_body"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/attendance_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/mock_attendance_image"
        />

    <TextView
        android:id="@+id/Time_ins_outs"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="#808080"
        android:text="Time In mock"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendance_body"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/Time_ins_outs_Button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/extraroundbutton"
        android:backgroundTint="@color/black"
        android:text="K"
        app:circularflow_defaultRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@id/Time_ins_outs"
        app:layout_constraintLeft_toRightOf="@+id/Time_ins_outs"
        app:layout_constraintTop_toTopOf="@+id/Time_ins_outs"
        tools:ignore="HardcodedText,TextContrastCheck" />

