<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    tools:ignore="ScrollViewSize">

    <ImageView
        android:id="@+id/user_Icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_bg"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="User Image"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/name_desc"
        android:text="Name:"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="60dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/user_Icon"
        app:layout_constraintStart_toStartOf="@id/user_Icon"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/name_actual"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:minWidth="150dp"
        android:minHeight="40dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/name_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/name_desc"
        app:layout_constraintTop_toTopOf="@+id/name_desc"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="edit name"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/name_actual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name_actual"
        app:layout_constraintTop_toTopOf="@+id/name_actual"
        app:layout_constraintVertical_bias="0.533"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="300dp"
        android:maxWidth="400dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintTop_toBottomOf="@+id/name_actual"
        app:layout_constraintStart_toStartOf="@id/name_desc"
        app:layout_constraintEnd_toEndOf="@id/edit_name"/>

    <TextView
        android:id="@+id/email_desc"
        android:text="Email:"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="20dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/name_desc"
        app:layout_constraintStart_toStartOf="@id/user_Icon"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/email_actual"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:minWidth="150dp"
        android:minHeight="40dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/email_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/email_desc"
        app:layout_constraintTop_toTopOf="@+id/email_desc"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="edit email"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/email_actual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/email_actual"
        app:layout_constraintTop_toTopOf="@+id/email_actual"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="300dp"
        android:maxWidth="400dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintTop_toBottomOf="@+id/email_actual"
        app:layout_constraintStart_toStartOf="@id/email_desc"
        app:layout_constraintEnd_toEndOf="@id/edit_email"/>

    <TextView
        android:id="@+id/Age_desc"
        android:text="Age:"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="20dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/email_desc"
        app:layout_constraintStart_toStartOf="@id/user_Icon"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/age_actual"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:minHeight="40dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Age_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/Age_desc"
        app:layout_constraintTop_toTopOf="@+id/Age_desc"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="edit age"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/age_actual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/age_actual"
        app:layout_constraintTop_toTopOf="@+id/age_actual"
        app:layout_constraintVertical_bias="0.466"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="300dp"
        android:maxWidth="400dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintTop_toBottomOf="@+id/age_actual"
        app:layout_constraintStart_toStartOf="@id/Age_desc"
        app:layout_constraintEnd_toEndOf="@id/edit_age"/>

    <TextView
        android:id="@+id/Password_desc"
        android:text="Password:"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Age_desc"
        app:layout_constraintStart_toStartOf="@id/user_Icon"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/password_actual"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:minHeight="40dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Password_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/Password_desc"
        app:layout_constraintTop_toTopOf="@+id/Password_desc"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="edit password"
        android:src="@drawable/edit_icon"
        app:layout_constraintBottom_toBottomOf="@+id/password_actual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/password_actual"
        app:layout_constraintTop_toTopOf="@id/password_actual"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
