<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:minHeight="400dp"
    android:layout_height="wrap_content"
    tools:context=".ui.calendar.CalendarFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/calendar_placeholder_image"
        android:text="Calendar"
        android:paddingStart="40dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <ImageView
        android:id="@+id/calendar_placeholder_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/calendar_placeholder_transparent"
        android:contentDescription="Calendar Placeholder"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/barLine_calendarPlaceholder"
        android:layout_width="300dp"
        android:maxWidth="400dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintTop_toBottomOf="@+id/calendar_placeholder_image"
        app:layout_constraintStart_toStartOf="@id/calendar_placeholder_image"
        app:layout_constraintEnd_toEndOf="@id/calendar_placeholder_image"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/emptyList_timeInOut"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text=" - No Data available - "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="40dp"
        android:textColor="@color/custTextColor"
        app:layout_constraintTop_toBottomOf="@+id/timeInOutlog_label"
        app:layout_constraintStart_toStartOf="@id/timeInOutlog_label"
        app:layout_constraintEnd_toEndOf="@+id/timeInOutlog_label"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/timeInOutlog_label"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/barLine_calendarPlaceholder"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Time Ins and Outs Log:"
        android:paddingStart="40dp"
        tools:ignore="HardcodedText,RtlSymmetry" />


    <ListView
        android:id="@+id/timeInsOutsLOG"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:padding="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/timeInOutlog_label"
        app:layout_constraintStart_toStartOf="@id/timeInOutlog_label"
        app:layout_constraintEnd_toEndOf="@+id/timeInOutlog_label"
        tools:ignore="NestedScrolling">

    </ListView>

    <TextView
        android:id="@+id/emptyList_vacation"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text=" - No Data available - "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="40dp"
        android:textColor="@color/custTextColor"
        app:layout_constraintTop_toBottomOf="@+id/VacationLeavesLog_Label"
        app:layout_constraintStart_toStartOf="@id/VacationLeavesLog_Label"
        app:layout_constraintEnd_toEndOf="@+id/VacationLeavesLog_Label"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vacation Leaves Log:"
        android:id="@+id/VacationLeavesLog_Label"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="40dp"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toBottomOf="@+id/timeInOutlog_label"/>

    <ListView
        android:id="@+id/VacationLeavesLog"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="400dp"
        android:padding="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/VacationLeavesLog_Label"
        app:layout_constraintStart_toStartOf="@id/VacationLeavesLog_Label"
        app:layout_constraintEnd_toEndOf="@+id/VacationLeavesLog_Label"
        tools:ignore="NestedScrolling">

    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sick Leaves Log:"
        android:id="@+id/SickLeavesLog_Label"
        tools:ignore="HardcodedText,RtlSymmetry"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="40dp"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toBottomOf="@+id/VacationLeavesLog_Label"/>

    <ListView
        android:id="@+id/SickLeavesLog"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="400dp"
        android:padding="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/SickLeavesLog_Label"
        app:layout_constraintStart_toStartOf="@id/SickLeavesLog_Label"
        app:layout_constraintEnd_toEndOf="@+id/SickLeavesLog_Label"
        tools:ignore="NestedScrolling">

    </ListView>

    <TextView
        android:id="@+id/emptyList_sick"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text=" - No Data available - "
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="40dp"
        android:textColor="@color/custTextColor"
        app:layout_constraintTop_toBottomOf="@+id/SickLeavesLog_Label"
        app:layout_constraintStart_toStartOf="@id/SickLeavesLog_Label"
        app:layout_constraintEnd_toEndOf="@+id/SickLeavesLog_Label"
        tools:ignore="HardcodedText" />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>