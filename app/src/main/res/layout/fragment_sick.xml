<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vacation.VacationFragment">


    <ImageView
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.5"
        android:src="@drawable/medicine"
        app:layout_constraintBottom_toBottomOf="@+id/sick_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        app:layout_constraintWidth="300dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toTopOf="@+id/sick_start_date"
        app:layout_constraintEnd_toEndOf="@+id/sick_start_date"
        app:layout_constraintStart_toStartOf="@+id/sick_start_date"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/sick_start_date"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="From: DD/MM/YYYY"
        android:inputType="date"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sick_end_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="Autofill,HardcodedText,TextFields" />


    <TextView
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Date"
        app:layout_constraintWidth="300dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toTopOf="@+id/sick_end_date"
        app:layout_constraintEnd_toEndOf="@+id/sick_end_date"
        app:layout_constraintStart_toStartOf="@+id/sick_end_date"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/sick_end_date"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="To: DD/MM/YYYY"
        android:inputType="date"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sick_leave_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <EditText
        android:id="@+id/sick_leave_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Leave Address"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sick_apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="Autofill,HardcodedText,TextFields" />


    <Button
        android:id="@+id/sick_apply"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#6499C3"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_sick_days"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_sick_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/sick_apply"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>