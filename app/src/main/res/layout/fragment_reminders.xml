<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    tools:context=".ui.reminders.RemindersFragment">


    <ImageView
        android:layout_height="300dp"
        android:layout_width="700dp"
        android:alpha="0.2"
        android:src="@drawable/cloud_for_bg_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/smallerBar"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintBottom_toTopOf="@+id/largerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5sp"
        />

    <View
        android:id="@+id/largerBar"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintBottom_toTopOf="@+id/listView_showReminders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5sp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60sp"
        android:layout_marginEnd="-10sp"
        android:layout_height="300dp"
        android:layout_width="500dp"
        android:alpha="0.3"
        android:src="@drawable/cloudforhome_1"/>

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60sp"
        android:layout_marginEnd="-10sp"
        android:layout_height="300dp"
        android:layout_width="500dp"
        android:alpha="0.3"
        android:src="@drawable/cloud_for_bg_2_full"/>

    <ListView
        android:id="@+id/listView_showReminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:maxHeight="300sp"
        tools:layout_editor_absoluteY="153dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        tools:listitem="@layout/list_item_reminders" />

    <TextView
        android:id="@+id/noReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - No reminders - "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>