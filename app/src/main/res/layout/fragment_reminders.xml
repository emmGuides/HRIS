<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    tools:context=".ui.reminders.RemindersFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filterReminders_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:ems="10"
        android:hint="Filter Reminders"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/checklist"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:helperTextEnabled="true"
        app:helperText="Filtering reminders function still in development"
        app:helperTextTextColor="#D86B6B"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill,HardcodedText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/filterReminders"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_height="300dp"
        android:layout_width="700dp"
        android:alpha="0.2"
        android:src="@drawable/cloud_for_bg_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/smallerBar"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintBottom_toTopOf="@+id/largerBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5sp"
        />

    <View
        android:id="@+id/largerBar"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/barColor"
        app:layout_constraintBottom_toTopOf="@+id/listView_showReminders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5sp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-60sp"
        android:layout_marginEnd="-10sp"
        android:layout_height="300dp"
        android:layout_width="500dp"
        android:alpha="0.3"
        android:src="@drawable/cloudforhome_1"/>

    <ListView
        android:id="@+id/listView_showReminders"
        android:layout_width="match_parent"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:maxHeight="300sp"
        tools:layout_editor_absoluteY="153dp"
        app:layout_constraintTop_toBottomOf="@id/filterReminders_layout"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="25sp"
        tools:listitem="@layout/list_item_reminders" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filterReminders_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/empty_box"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/empty_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/noReminders_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - No reminders - "
            app:layout_constraintTop_toBottomOf="@+id/empty_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>